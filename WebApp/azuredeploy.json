{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        },
        "servicePlanName": {
            "type": "string"
        },
        "siteName": {
            "type": "string"
        },
        "ProjectOwner" : {
            "type": "string"
        },
        "ProjectName" : { 
            "type": "string"
        }
    },
    "variables": {
        "apiVersionStorage": "2016-01-01",
        "apiVersion": "2015-08-01",
        "webFarmSize": "S2",
        "webFarmCapacity": 2,
        "repoUrl": "https://github.com/bjd145/MyFavoriteWineList",
        "branch": "master"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_ZRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "[variables('apiVersionStorage')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Project Owner": "[parameters('ProjectOwner')]",
                "Project ": "[parameters('ProjectName')]"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        }
                    }
                }
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "[variables('webFarmSize')]",
                "tier": "Standard",
                "size": "[variables('webFarmSize')]",
                "family": "S",
                "capacity": "[variables('webFarmCapacity')]"
            },
            "kind": "app",
            "name": "[parameters('servicePlanName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('servicePlanName')]",
                "numberOfWorkers": 1
            },
            "tags": {
                "Project Owner": "[parameters('ProjectOwner')]",
                "Project ": "[parameters('ProjectName')]"
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "app",
            "name": "[parameters('siteName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[resourceGroup().location]",
             "tags": {
                "Project Owner": "[parameters('ProjectOwner')]",
                "Project ": "[parameters('ProjectName')]"
            },
            "properties": {
                "name": "[parameters('siteName')]",
                "hostNames": [
                    "[concat(parameters('siteName'),'.azurewebsites.net')]"
                ],
                "enabledHostNames": [
                    "[concat(parameters('siteName'),'.azurewebsites.net')]",
                    "[concat(parameters('siteName'),'.scm.azurewebsites.net')]"
                ],
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('siteName'),'.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    },
                    {
                        "name": "[concat(parameters('siteName'),'.scm.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]"
            },
            "resources": [
                {
                    "apiVersion": "[variables('apiVersion')]",
                    "name": "web",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
                    ],
                    "tags": {
                        "displayName": "WebAppConfig"
                    },
                    "properties": {
                        "netFrameworkVersion": "v4.6",
                        "use32BitWorkerProcess": false, 
                        "webSocketsEnabled": false,
                        "alwaysOn": false,
                        "managedPipelineMode": 0,
                        "defaultDocuments": [
                            "index.html",
                            "default.aspx",
                            "hostingstart.html"
                        ]
                    }
                },   
                {
                    "apiVersion": "[variables('apiVersion')]",
                    "name": "appsettings",
                    "type": "config",
                    "tags": {},
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
                    ],
                    "properties": {
                        "WEBSITE_NODE_DEFAULT_VERSION": "4.4.7",
                        "StorageKey": "XGWatQMKR3U7SK4E6WUlA7j10gbh6Ad1EbuIAe9Pp9QjzjdXYgEAHzfHixEW5KcI6+47bjy05qRNoxt3eCzyVA=="
                    }
                },
                {
                    "apiVersion": "[variables('apiVersion')]",
                    "name": "logs",
                    "type": "config",
                    "tags": {},
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
                    ],
                    "properties": {
                        "applicationLogs": {
                            "fileSystem": {
                                "level": "Error"
                            },
                            "azureBlobStorage": {
                                "level": "Error",
                                "retentionInDays": null
                            }
                        },
                        "httpLogs": {
                            "azureBlobStorage": {
                                "retentionInDays": null,
                                "enabled": true
                            }
                        }
                    }
                },
                {
                    "apiVersion": "[variables('apiVersion')]",
                    "name": "Staging",
                    "type": "slots",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]"
                    ],
                    "tags": {
                        "Project Owner": "[parameters('ProjectOwner')]",
                        "Project ": "[parameters('ProjectName')]"
                    },
                    "properties": {
                    },
                    "resources": []
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]"
            ]
        }
    ]
}